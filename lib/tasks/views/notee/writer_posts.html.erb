<% render :partial => "notee/header.html.erb" %>
<h2>Writer: <%= params[:name_or_id] %></h2>
<% @posts.each do |post| %>
    <div>
      <p><%= post.published_at %></p>
      <p><%= post.category.name %></p>
      <a href="/<%= post.slug %>">
        <h3><%= post.title %></h3>
        <p><%= post.user.name %></p>
        <img src="/notee/<%= post.thumbnail.content %>">
        <p><%= notee_content(post) %></p>
        <p>More Read</p>
      </a>
    </div>
<% end %>
<% render :partial => "notee/sidebar.html.erb" %>
